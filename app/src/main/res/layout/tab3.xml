<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dummy_focus"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" 
        android:orientation="horizontal" />
    
    <LinearLayout
        style="@style/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3px"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <TextView
            style="@style/header_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3px"
            android:padding="10px"
            android:text="Tablet Sites Loaded" />
         <Button
            android:id="@+id/Downloadlargedocs"
            style="@style/button_small"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:onClick="downloadlargefiles"
            android:padding="10dp"
             android:gravity="center_vertical"
             android:layout_margin="15dp"
            android:text="Shortcut to Download Job Docs" /> 
        
       
        <Button
            android:id="@+id/DownloadButton"
            style="@style/button_small"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:onClick="downloadSites"
            android:padding="10dp"
            android:text="Download Sites" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ServiceAddressTable"
        style="@style/table"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3px"
        android:layout_marginLeft="3px"
        android:layout_marginRight="3px" >

        <TextView
            android:id="@+id/Sort_SiteName"
            style="@style/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2px"
            android:padding="10px"
            android:text="Site Name"
            android:layout_weight="1.2" />

        <TextView
            android:id="@+id/Sort_Address"
            style="@style/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2px"
            android:padding="10px"
            android:text="Address"
            android:layout_weight="1.3" />

        <TextView
            android:id="@+id/Sort_City"
            style="@style/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2px"
            android:padding="10px"
            android:text="City"
            android:layout_weight="0.6" />

        <TextView
            android:id="@+id/Sort_State"
            style="@style/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2px"
            android:padding="10px"
            android:text="State"
            android:layout_weight="0.3" />

        <TextView
            android:id="@+id/Sort_Zip"
            style="@style/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2px"
            android:padding="10px"
            android:text="Zip"
            android:layout_weight="0.3" />

        <TextView
            android:id="@+id/Sort_BuildingNo"
            style="@style/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2px"
            android:padding="10px"
            android:text="Building No"
            android:layout_weight="0.6" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3px"
        android:layout_marginLeft="3px"
        android:layout_marginRight="3px" >

        <LinearLayout
            android:id="@+id/ServiceAddressTable_Results"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>