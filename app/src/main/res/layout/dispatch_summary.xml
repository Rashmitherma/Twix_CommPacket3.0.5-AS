<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    style="@style/table_light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="1200dp"
    android:orientation="vertical"
    android:paddingBottom="10px" >

    <LinearLayout
        style="@style/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <TextView
            style="@style/header_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4px"
            android:text="Batch No:" />

        <TextView
            android:id="@+id/Text_BatchNo"
            style="@style/header_value_large"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="4px" />

        <TextView
            style="@style/header_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4px"
            android:text="Job No:" />

        <TextView
            android:id="@+id/Text_JobNo"
            style="@style/header_value_large"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="10px"
            android:padding="4px" />

        <TextView
            style="@style/header_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="4px"
            android:text="Call Date:" />

        <TextView
            android:id="@+id/Text_CallDate"
            style="@style/header_value_large"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:padding="4px" />
		
        <LinearLayout
            android:id="@+id/Navigation"
            style="@style/button_small"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:layout_marginRight="5px"
            android:orientation="horizontal">
            <ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/icon_navigation"/>
            <TextView
	            style="@style/sub1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0"
	            android:text="Map" />
        </LinearLayout>
        
        <Button
            android:id="@+id/OpenTag"
            style="@style/button_small"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:padding="10px"
            android:text="Create Tag"
            android:layout_marginRight="25px" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:padding="15px"
            android:src="@drawable/minus2" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minWidth="1200dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/sub1_large"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:text="Site Contact: " />

                <LinearLayout
                    android:id="@+id/ContactResults"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/sub1_large"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0"
                    android:text="Requested By: " />

                <LinearLayout
                    android:id="@+id/RequestResults"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/BillHeader"
                    style="@style/sub1_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Bill To:" />

                <TextView
                    android:id="@+id/Text_BillTo"
                    style="@style/sub1_value_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2" />
            </LinearLayout>

            <TextView
                android:id="@+id/Text_BillAddress1"
                style="@style/sub1_value_large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65px"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/Text_BillAddress2"
                style="@style/sub1_value_large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65px"
                android:layout_weight="0" />
			
             <LinearLayout
            	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
	                style="@style/sub1_large"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="30dp"
	                android:text="Customer P.O.: "
	                android:layout_weight="0" />
                <TextView
	                android:id="@+id/Text_CustomerPO"
	                style="@style/sub1_value_large"
	                android:layout_height="wrap_content"
	                android:layout_width="0dp"
	                android:layout_weight="1" />
        	</LinearLayout>
            
            <TextView
                style="@style/sub1_large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="0"
                android:text="Service Address:" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/sub1_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Site Name: " />

                <TextView
                    android:id="@+id/Text_SiteName"
                    style="@style/sub1_value_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:singleLine="true" />
                
                <TextView
                    android:id="@+id/Title_Tenant"
                    style="@style/sub1_large"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Tenant: "
                    android:layout_weight="0"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/Text_Tenant"
                    style="@style/sub1_value_large"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:layout_marginRight="25px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/sub1_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Address: " />

                <TextView
                    android:id="@+id/Text_Address1"
                    style="@style/sub1_value_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2" />

                <TextView
                    style="@style/sub1_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="City: " />

                <TextView
                    android:id="@+id/Text_City"
                    style="@style/sub1_value_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </LinearLayout>

                <TextView
                    android:id="@+id/Text_Address2"
                    style="@style/sub1_value_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2" />

                <TextView
                    style="@style/sub1_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="State: " />

                <TextView
                    android:id="@+id/Text_State"
                    style="@style/sub1_value_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3" >
                </LinearLayout>

                <TextView
                    style="@style/sub1_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="Zip " />

                <TextView
                    android:id="@+id/Text_Zip"
                    style="@style/sub1_value_large"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/sub1_large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="0"
                android:text="Description:" />

            <TextView
                android:id="@+id/Text_Description"
                style="@style/sub1_value_large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_weight="0"
                android:minLines="1"
                android:text=" " />
			
			<LinearLayout
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="30dp"
			    android:orientation="horizontal" >
				<TextView
					style="@style/sub1_large"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					
					android:text="Mechanics:" />
				<Button
					android:id="@+id/AssignMechanic"
					style="@style/button_small"
					android:layout_width="wrap_content"
					android:layout_height="50dp"
					android:layout_weight="0"
					android:padding="10px"
					android:text="Assign Another Mechanic"
					android:layout_marginRight="35px" />
			</LinearLayout>
            
			<LinearLayout
			     android:id="@+id/MechanicBuild"
			     android:layout_width="fill_parent"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="45dp"
			     android:orientation="vertical" >
			</LinearLayout>
			
            <TextView
                android:id="@+id/PMComTitle"
                style="@style/sub1_large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="0"
                android:text="PM Comments:"
                android:visibility="gone" />
            
            <LinearLayout
                android:id="@+id/PMComments"
            	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:orientation="vertical"
                android:visibility="gone" >
        	</LinearLayout>
        	
            <TextView
                android:id="@+id/PMEstTime"
                style="@style/sub1_large"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight="0"
                android:visibility="gone" />
        	
            <LinearLayout
            	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
	                style="@style/sub1_large"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="30dp"
	                android:text="To-Date Dispatch Hours (Including Your Open Tags): "
	                android:layout_weight="0" />
                <TextView
	                android:id="@+id/TotalDispatchHours"
	                style="@style/sub1_value_large"
	                android:layout_height="wrap_content"
	                android:layout_width="0dp"
	                android:layout_weight="1" />
        	</LinearLayout>
            
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>