<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="1250dp"
    style="@style/table" >
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content" >
			<TextView
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:text="Site Name: "
				android:layout_marginLeft="2px"
				style="@style/header_large" />
			<EditText
				android:id="@+id/Text_SiteName"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:singleLine="true"
				android:maxLength="100"
				android:layout_marginRight="2px"
				style="@style/header_edit"
				android:layout_weight="2" />
			<TextView
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:text="Service Type:"
				style="@style/header_large" />
				<RelativeLayout
					android:layout_width="0dp"
					android:layout_height="38dp"
					android:layout_marginRight="2px"
					android:layout_weight="2" >
					<Spinner
						android:id="@+id/Text_ServiceType"
						android:layout_height="fill_parent"
						android:layout_width="fill_parent"
						style="@style/header_edit" />
					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@drawable/drop_arrow"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_margin="5px" />
				</RelativeLayout>
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
		    android:layout_margin="3px">
		    <TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="Tenant: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_Tenant"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:maxLength="100"
				android:singleLine="true"
				style="@style/sub1_edit"
				android:layout_weight="2"
				android:layout_marginRight="10px" />
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:layout_weight="3"
				android:layout_marginLeft="25px" />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:layout_margin="3px">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="BatchNo: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_BatchNo"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:text=""
				android:inputType="number"
				android:digits="1234567890"
				android:maxLength="10"
				android:singleLine="true"
				style="@style/sub1_edit"
				android:layout_weight="2" />
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="JobNo: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_JobNo"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:text=""
				android:inputType="number"
				android:digits="1234567890"
				android:maxLength="12"
				android:singleLine="true"
				android:layout_marginRight="10px"
				style="@style/sub1_edit"
				android:layout_weight="2" />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:layout_margin="3px">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="Address1: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_Address1"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:inputType="textCapWords"
				android:maxLength="100"
				android:singleLine="true"
				style="@style/sub1_edit"
				android:layout_weight="2" />
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="City: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_City"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:inputType="textCapWords"
				android:maxLength="50"
				android:singleLine="true"
				android:layout_marginRight="10px"
				style="@style/sub1_edit"
				android:layout_weight="2" />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:layout_margin="3px">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="Address2: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_Address2"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:inputType="textCapWords"
				android:maxLength="100"
				android:singleLine="true"
				style="@style/sub1_edit"
				android:layout_weight="2" />
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="State: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_State"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:maxLength="10"
				android:singleLine="true"
				android:inputType="textCapCharacters"
				android:layout_marginRight="10px"
				style="@style/sub1_edit"
				android:layout_weight="2" />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:layout_margin="3px">
			<TextView
				android:layout_height="0dp"
				android:layout_width="0dp"
				android:layout_marginLeft="25px"
				style="@style/sub1_large"
				android:layout_weight="3" />
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="ZIP: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_Zip"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:inputType="number"
				android:maxLength="10"
				android:layout_marginRight="10px"
				style="@style/sub1_edit"
				android:layout_weight="2" />
		</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center" >
		<Button
			android:id="@+id/Save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Save"
			style="@style/button"
			android:layout_weight="0"
			android:padding="10px"
			android:layout_margin="5px" />
		<Button
			android:id="@+id/Cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Cancel"
			style="@style/button"
			android:layout_weight="0"
			android:padding="10px"
			android:layout_margin="5px" />
	</LinearLayout>
</LinearLayout>