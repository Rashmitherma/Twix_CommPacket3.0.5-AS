<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    
    <LinearLayout
		android:id="@+id/dummy_focus"
	    android:focusable="true"
	    android:focusableInTouchMode="true"
	    android:layout_width="0px"
	    android:layout_height="0px"
	    android:orientation="horizontal"  />
    
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	style="@style/header"
    	android:layout_weight="0" >
    	<TextView 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:text="Labor For: "
	    	style="@style/header_tab"
	    	android:layout_weight="0"
	    	android:padding="5px" />
	    <TextView 
	    	android:id="@+id/UnitInfo"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	style="@style/header_tab"
	    	android:layout_weight="1"
	    	android:padding="5px" />
	    <LinearLayout
	    	android:id="@+id/AddLabor"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal" >
	    	<ImageButton
		   		android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:padding="10px"
		   		android:src="@drawable/plus"
		   		android:background="#00000000"
		   		android:onClick="addLabor"
		   		android:layout_gravity="center_vertical" />
		   	<TextView 
		    	android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:text="Add Labor"
		    	style="@style/sub1"
		    	android:layout_weight="1"
		    	android:padding="5px"
		    	android:layout_margin="2px" />
	    </LinearLayout>
    </LinearLayout>
    
    
    
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_margin="4px"
    	style="@style/table" >
    	<ImageButton
    		android:id="@+id/dummyDelete_Labor"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:src="@drawable/minus"
    		android:background="#00000000"
    		android:padding="10px"
    		android:visibility="invisible" />
	    <TextView 
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:text="Date"
	    	style="@style/header"
	    	android:layout_weight="2.0"
	    	android:padding="5px"
	    	android:layout_margin="2px" />
	    <TextView 
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:text="Reg Hrs"
	    	style="@style/header"
	    	android:layout_weight="2.0"
	    	android:padding="5px"
	    	android:layout_margin="2px" />
	    <TextView 
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:text="TH Hrs"
	    	style="@style/header"
	    	android:layout_weight="2.0"
	    	android:padding="5px"
	    	android:layout_margin="2px" />
	    
	    <TextView 
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:text="DT Hrs"
	    	style="@style/header"
	    	android:layout_weight="2.0"
	    	android:padding="5px"
	    	android:layout_margin="2px" />
	     <TextView 
	    	android:layout_width="100dp"
	    	android:layout_height="match_parent"
	    	android:text="Labor Type"
	    	android:layout_weight="2.0"
	    	style="@style/header"
	    	android:padding="5px"
	    	android:layout_margin="2px" />
	    <TextView 
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:text="Mechanic"
	    	style="@style/header"
	    	android:layout_weight="6.8"
	   
	    	android:padding="5px"
	    	android:layout_margin="2px" />
    </LinearLayout>
     <ScrollView
    	android:id="@+id/ScrollView02"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:layout_weight="1" >
    	
	    <LinearLayout
	    	android:layout_height="wrap_content"
	    	android:layout_width="fill_parent"
	    	android:id="@+id/LaborTable2"
	    	android:layout_margin="4px"
	    	android:orientation="vertical"
	    	style="@style/table"
	    	android:focusable="true" 
        	android:focusableInTouchMode="true" >
	    </LinearLayout>
    </ScrollView>
    <ScrollView
    	android:id="@+id/ScrollView01"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:layout_weight="1" >
    	
	    <LinearLayout
	    	android:layout_height="wrap_content"
	    	android:layout_width="fill_parent"
	    	android:id="@+id/LaborTable1"
	    	android:layout_margin="4px"
	    	android:orientation="vertical"
	    	style="@style/table"
	    	android:focusable="true" 
        	android:focusableInTouchMode="true" >
	    </LinearLayout>
    </ScrollView>
   
   
</LinearLayout>