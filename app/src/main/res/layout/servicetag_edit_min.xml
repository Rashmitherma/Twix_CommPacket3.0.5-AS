<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="800dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="800dp"
    style="@style/table" >
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content" >
			<TextView
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:text="Service Type: "
				style="@style/header_large"
				android:paddingLeft="3px" />
			<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1" >
				<Spinner
					android:id="@+id/Text_ServiceType"
					android:layout_height="38dp"
					android:layout_width="fill_parent"
					style="@style/header_edit" />
				<ImageView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@drawable/drop_arrow"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"
					android:layout_margin="5px" />
			</RelativeLayout>
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:layout_margin="3px">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="BatchNo: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_BatchNo"
				android:layout_height="match_parent"
				android:layout_width="0dp"
				android:singleLine="true"
				android:inputType="number"
				android:digits="1234567890"
				android:maxLength="10"
				android:layout_marginRight="25px"
				style="@style/sub1_edit" />
			
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:layout_margin="3px">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="JobNo: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_JobNo"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:singleLine="true"
				android:inputType="number"
				android:digits="1234567890"
				android:maxLength="12"
				android:layout_marginRight="25px"
				style="@style/sub1_edit" />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:layout_margin="3px">
			<TextView
				android:layout_height="wrap_content"
				android:layout_width="0dp"
				android:text="Site Tenant: "
				android:layout_marginLeft="25px"
				style="@style/sub1_large" />
			<EditText
				android:id="@+id/Text_Tenant"
				android:layout_height="fill_parent"
				android:layout_width="0dp"
				android:maxLength="100"
				android:singleLine="true"
				android:layout_marginRight="25px"
				style="@style/sub1_edit" />
		</LinearLayout>
	
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center" >
		<Button
			android:id="@+id/Save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Save"
			style="@style/button"
			android:layout_weight="0"
			android:padding="10px"
			android:layout_margin="5px" />
		<Button
			android:id="@+id/Cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Cancel"
			style="@style/button"
			android:layout_weight="0"
			android:padding="10px"
			android:layout_margin="5px" />
	</LinearLayout>
</LinearLayout>