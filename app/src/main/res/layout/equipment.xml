<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/main"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	
	<LinearLayout
		android:id="@+id/dummy_focus"
	    android:focusable="true"
	    android:focusableInTouchMode="true"
	    android:layout_width="0dp"
	    android:layout_height="0dp" />
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="horizontal"
		style="@style/header"
		android:layout_weight="0" >
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Site\nSummary"
			style="@style/back_button"
			android:layout_marginRight="20dp" />
		<TextView
			android:id="@+id/title"
			android:text="Equipment for "
			android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:layout_margin="5dp"
	        style="@style/header_tab" />
	        
	    <LinearLayout
	    	android:id="@+id/ScannerLookup"
	    	android:layout_width="wrap_content"
	    	android:layout_height="45dp"
	    	android:orientation="horizontal"
	    	android:layout_marginLeft="5dp"
	    	android:layout_marginRight="5dp"
	    	style="@style/button_small"
	    	android:layout_weight="0" >
		    <ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/icon_scanner"
				android:layout_gravity="center_vertical" />
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="Scan Lookup"
			  	style="@style/sub1"
			   	android:padding="5dp"
			   	android:layout_margin="2dp" />
	    </LinearLayout>
	    
	    <LinearLayout
	    	android:id="@+id/AddEquipmentHolder"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal" >
		    <ImageButton
		        android:id="@+id/AddEquipmentButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:src="@drawable/plus"
				android:background="#00000000"
				android:layout_gravity="center_vertical" />
			<TextView 
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="Add Equipment"
			  	style="@style/sub1"
			   	android:layout_weight="1"
			   	android:padding="5dp"
			   	android:layout_margin="2dp" />
	    </LinearLayout>
	</LinearLayout>
	
	
	<LinearLayout
	    android:id="@+id/EquipmentHeader"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >
			<TextView
                android:id="@+id/Sort_Category"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0.6"
                android:padding="10dp"
                android:text="Category" />
			
			<TextView
                android:id="@+id/Sort_UnitNo"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0.6"
                android:padding="10dp"
                android:text="Unit No" />
			
			<TextView
                android:id="@+id/Sort_AreaServed"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0.8"
                android:padding="10dp"
                android:text="Area Srv." />
			
			<TextView
                android:id="@+id/Sort_Manufacturer"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0.8"
                android:padding="10dp"
                android:text="Manufacturer" />
			
			<TextView
                android:id="@+id/Sort_Model"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Model" />
			
			<TextView
                android:id="@+id/Sort_SerialNo"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Serial No" />
			
			<TextView
                android:id="@+id/Sort_Verified"
                style="@style/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0.5"
                android:padding="10dp"
                android:text="Verified" />
	</LinearLayout>
	
	<ScrollView
	    android:id="@+id/ScrollView01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
	    <LinearLayout
	        android:id="@+id/EquipmentList"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    </LinearLayout>
	</ScrollView>
	
	
</LinearLayout>