<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
	        android:orientation="vertical"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_weight="0"
	        android:background="@drawable/sidebar_bg" >
	        <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:orientation="vertical">
		        <Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Tag\nSummary"
					style="@style/back_button"
					android:layout_margin="5dp" />
			    <ImageView
			      	android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@drawable/title_icon" />
			</LinearLayout>
	        <TabWidget
	            android:id="@android:id/tabs"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" >
	        </TabWidget>
	            
			<LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="4dp"
		        android:orientation="horizontal">
				<ImageButton
					android:id="@+id/Save"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/icon_save"
		        	style="@style/button"
		        	android:layout_weight="0"
		        	android:layout_margin="3px" />
		        <ImageButton
		        	android:id="@+id/Delete"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/icon_remove_equipment"
		        	style="@style/button"
		        	android:layout_weight="0"
		        	android:layout_margin="3px" />
	        </LinearLayout>
			
        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="2px"
        	android:layout_height="fill_parent"
        	android:background="#ff000000" >
        </LinearLayout>
	   
       <!-- Set the width to anything > 0dip. Having 0dip causes the copy-paste action bar to crash the app -->
	   <LinearLayout
	     	android:layout_height="fill_parent"
	       	android:layout_width="1dp"
	       	android:layout_weight="1"
	       	android:orientation="vertical" >
	       	<FrameLayout
		        android:id="@android:id/tabcontent"
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:background="@drawable/sidebar_bg" />
        	<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:layout_marginTop="3px" >
	        	<TextView
	        	    android:id="@+id/Title_SiteName"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:text="Site: "
	        		android:singleLine="true"
	        		style="@style/header_large"
	        		android:layout_weight="0"
	        		android:visibility="gone" />
	        	<TextView
	        		android:id="@+id/SiteName"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:singleLine="true"
	        		style="@style/header_large" />
	        	<TextView
	        	    android:id="@+id/Title_Tenant"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:text="Tenant: "
	        		android:singleLine="true"
	        		style="@style/header_large"
	        		android:layout_weight="0"
	        		android:visibility="gone" />
	        	<TextView
	        		android:id="@+id/Tenant"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:singleLine="true"
	        		style="@style/header_large"
	        		android:layout_weight="0" />
	        	
	        	
	        		
	        </LinearLayout>
	        
        	<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal" >
	        	<TextView
	        	    android:id="@+id/Title_JobNo"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:text="Job: "
	        		android:singleLine="true"
	        		style="@style/header_large"
	        		android:layout_weight="0"
	        		android:visibility="gone" />
	        	<TextView
	        		android:id="@+id/JobNo"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:singleLine="true"
	        		style="@style/header_large" />
	        		
	        	<TextView
	        	    android:id="@+id/Title_BatchNo"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:text="Batch: "
	        		android:singleLine="true"
	        		style="@style/header_large"
	        		android:layout_weight="0"
	        		android:visibility="gone" />
	        	<TextView
	        		android:id="@+id/BatchNo"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:singleLine="true"
	        		style="@style/header_large" />
	        	
	        	<TextView
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:text="Tag No: "
	        		android:singleLine="true"
	        		style="@style/header_large"
	        		android:layout_weight="0" />
	        	<TextView
	        		android:id="@+id/TagNo"
	        		android:layout_width="wrap_content"
	        		android:layout_height="match_parent"
	        		android:singleLine="true"
	        		style="@style/header_large"
	        		android:layout_weight="0" />
	        </LinearLayout>
        	
        </LinearLayout>
    </LinearLayout>
</TabHost>