<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	
	
	<LinearLayout
		android:id="@+id/dummy_focus"
	    android:focusable="true"
	    android:focusableInTouchMode="true"
	    android:layout_width="0px"
	    android:layout_height="0px" />
	
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:orientation="horizontal"
		android:layout_weight="1" >
		
	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_width="0dp"
		android:orientation="vertical"
		android:layout_weight="1" >
	
	
		<TextView
			android:id="@+id/CheckListText"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="Checklist"
			android:textStyle="bold"
			style="@style/sub1"
			android:layout_weight="0"
			android:gravity="center" />
		
		<TableLayout
			android:id="@+id/ChecklistHeader"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_margin="3px"
			style="@style/table" >
		</TableLayout>
		<ScrollView
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:layout_weight="1" >
			<TableLayout
				android:id="@+id/ChecklistBody"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:layout_margin="3px"
				style="@style/table"
				android:focusable="true" 
        		android:focusableInTouchMode="true" >
			</TableLayout>
		</ScrollView>
	</LinearLayout>
	
	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_width="0dp"
		android:orientation="vertical"
		android:layout_weight="1" >
		<TextView
			android:id="@+id/LOTOListText"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:text="LOTO"
			android:textStyle="bold"
			style="@style/sub1"
			android:layout_weight="0"
			android:gravity="center" />
		
		<TableLayout
			android:id="@+id/LOTOlistHeader"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_margin="3px"
			style="@style/table" >
		</TableLayout>
		<ScrollView
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:layout_weight="1" >
			<TableLayout
				android:id="@+id/LOTOlistBody"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent"
				android:layout_margin="3px"
				style="@style/table"
				android:focusable="true" 
        		android:focusableInTouchMode="true" >
			</TableLayout>
		</ScrollView>
	</LinearLayout>
	
	</LinearLayout>
	
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="Comments: "
		android:textStyle="bold"
		style="@style/sub1"
		android:layout_weight="0"
		android:gravity="left|center_vertical" />
		
	<EditText
		android:id="@+id/Comments"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:minLines="4"
		android:maxHeight="200dp"
		android:maxLength="5000"
		android:layout_margin="3px"
		android:hint="comments"
		style="@style/sub1_edit"
		android:layout_weight="0"
		android:gravity="left|top" />
</LinearLayout>